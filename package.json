{
  "name": "htmlcss",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.html",
  "scripts": {
    "build": "npm run css",
    "css-lint": "stylelint assets/css/",
    "css-prefix": "postcss --replace style.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css style.css --content sample/dailyhopeless/index.html --output css/",
    "css": "npm-run-all css-prefix",
    "server": "live-server --port=3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,css -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "keywords": [],
  "author": "nndwn",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "live-server": "^1.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "purgecss": "^5.0.0",
    "stylelint": "^15.2.0"
  },
  "dependencies": {
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3",
    "jquery": "^3.6.3"
  }
}
